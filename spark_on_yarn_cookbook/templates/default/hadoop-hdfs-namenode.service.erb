[Unit]
Description=hadoop hdfs namenode
Requires=network.target
After=network.target

[Service]
Type=simple
PrivateTmp=yes
User=root
Group=root
Restart=on-failure
RestartSec=30

ExecStart=/bin/sh -c 'service hadoop-hdfs-namenode start'
ExecStop=/bin/sh -c 'service hadoop-hdfs-namenode stop'
PIDFile=/var/run/hadoop/hdfs/hadoop-hdfs-namenode.pid

[Install]
WantedBy=multi-user.target