[Unit]
Description=spark history server
Requires=network.target
After=network.target

[Service]
Type=simple
PrivateTmp=yes
User=root
Group=root
Restart=on-failure
RestartSec=30

ExecStart=/bin/sh -c 'service spark-history-server start'
ExecStop=/bin/sh -c 'service spark-history-server stop'
PIDFile=/var/run/spark/spark-history-server.pid

[Install]
WantedBy=multi-user.target